/* for custom modal */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.8;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-content {
  position: fixed;
  top: 26%;
  left: 0;
  z-index: 9500;
  width: 500rpx;
  height: 780rpx;
  overflow: hidden;
  padding: 120rpx 50rpx 50rpx;
  margin: -180rpx 70rpx;
  /* background: #fff; */
  border-radius: 20rpx;
}

.modal-content-box {
  position: fixed;
  top: 14%;
  left: 10%;
  z-index: 9600;
  width: 80%;
  height: 80%;
  overflow: hidden;
  border-radius: 2rpx;
}

.test-box {
  width: 70%;
  height: 161rpx;
  position: fixed;
  top: 360rpx;
  left: 15%;
  z-index: 96666;
}

.test-box>image {
  width: 100%;
  height: 600rpx;
  position: absolute;
  left: 0%;
  top: -60rpx;
}

.test-box-p {
width:100%;
height:100rpx;
font-size:30rpx;
color:#fff;
display:block;
line-height:100rpx;
text-align:center;
position:absolute;
left:0;
}
.test-box-p:nth-of-type(1) {
  top: 0;
  font-size: 50rpx;
  font-weight: bold;
  background: -webkit-gradient(linear, left top, left bottom, from(#F8B766), to(#EE7138));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.test-box-p:nth-of-type(2) {
  top: 60rpx;
  font-size: 42rpx;
}
.test-box-p:nth-of-type(3) {
  top: 120rpx;
  font-size: 32rpx;
}
.test-box-p:nth-of-type(4) {
  top: 160rpx;
  font-size: 32rpx;
}

.btn-box {
  width: 300rpx;
  height: 70rpx;
  background: transparent;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
  position: absolute;
  z-index: 99999999;
  top: 840rpx;
  left: calc(50% - 150rpx);
}

