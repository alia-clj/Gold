/* pages/testreport/testreport.wxss */

.changeStep {
  width: 16px;
  height: 80rpx;
  position: absolute;
  top: 50%;
}

.changeStep:nth-of-type(1) {
  left: 30rpx;
}

.changeStep:nth-of-type(2) {
  right: 30rpx;
}

.step-img {
  width: 80%;
  height: 600rpx;
  margin-left: 10%;
  position: absolute;
  top: 120rpx;
}

.step-desc {
  position: absolute;
  left: 57%;
  top: 80rpx;
  color: #fff;
  font-size: 34rpx;
}

.step-number {
  position: absolute;
  top: 68rpx;
  left: 6%;
  font-size: 124rpx;
  font-style: italic;
  color: #9176df;
  font-weight: bold;
}

.title-div>p {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}

.title-div>p:nth-of-type(1) {
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 40rpx;
}

.title-div>p:nth-of-type(2) {
  font-size: 42 rpx;
}

.title-div>image {
  width: 400rpx;
  height: 400rpx;
  margin: 40rpx auto;
  margin-left: calc(50% - 200rpx);
}

.text-div {
  width: 70%;
  background: #fff;
  display: block;
  /* margin-top: 40rpx; */
  margin-left: 15%;
  position: relative;
  border-radius: 20rpx;
}

.text-div>span {
  width: 0;
  height: 0;
  border-bottom: 20px solid #fff;
  border-left: 30px solid transparent;
  position: absolute;
  top: -36rpx;
  left: 45%;
}

.text-div>p {
  display: block;
  width: 90%;
  line-height: 50rpx;
  margin: 0 16px;
  font-size: 32rpx;
  box-sizing: border-box;
  color: #797979;
}

