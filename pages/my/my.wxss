.top-box {
  width: 100%;
  height: 360rpx;
  background: -webkit-linear-gradient(left top, #08f5e6, #ec38bf); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(bottom right, #08f5e6, #ec38bf); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(bottom right, #08f5e6, #ec38bf); /* Firefox 3.6 - 15 */
  background: linear-gradient(to bottom right, #08f5e6, #ec38bf); /* 标准的语法 */
}

.user-img {
  width: 160rpx;
  height: 160rpx;
  margin: 60rpx;
  float: left;
}

.user-name {
  float: left;
  margin-top: 80rpx;
}

.user-level {
  width: 100rpx;
  height: 50rpx;
  background: #a4b2ff;
  border-radius: 20rpx;
  position: fixed;
  top: 160rpx;
  left: 270rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 50rpx;
  text-align: center;
}

.user-vip {
  position: fixed;
  top: 160rpx;
  width: 160rpx;
  height: 50rpx;
  left: 400rpx;
}

.top-top {
  width: 80%;
  height: 200rpx;
  position: fixed;
  background: #fff;
  border-radius: 16rpx;
  top: 280rpx;
  left: 10%;
  border: 1px solid #f1eff8;
  display: flex;
  justify-content: center; /*水平居中*/
  align-items: center; /*垂直居中*/
}

.top-top >li {
  flex: 1;
  text-align: center;
}

.top-top >li>image {
  width: 60rpx;
  height: 60rpx;
}

.top-top >li>p {
  color: #000;
  font-size: 26rpx;
}

.content {
  width: 90%;
  margin-left: 5%;
  overflow: hidden;
  position: fixed;
  top: 550rpx;
}

.content>li {
  width: 100%;
  border-bottom: 1px dotted #000;
  height: 120rpx;
  display: block;
  line-height: 120rpx;
}

.content>li>span {
  float: right;
}
