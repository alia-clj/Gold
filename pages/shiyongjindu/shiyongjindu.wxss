/* pages/shiyongjindu/shiyongjindu.wxss */

.youhuquan-top>image {
  width: 100%;
  height: 240rpx;
}

.youhuquan-no{
width:80%;
height:300rpx;
background:#ffffff;
top:80rpx;
left:10%;
position:fixed;
border:1px solid #efefef;
border-radius:20rpx;
-moz-box-shadow:0px 0px 6px #5E7A71;
 -webkit-box-shadow:0px 0px 6px #5E7A71;
  box-shadow:0px 0px 6px #5E7A71;
}

.youhuquan-center {
  position: absolute;
    top: 80rpx;
  width: 80%;
  left: 10%;
}


.youhuquan-center-item {
  height: 280rpx;
  width: 100%;
  position: relative;
  border:1px solid #efefef;
  background:#ffffff;
border-radius:20rpx;
-moz-box-shadow:0px 0px 6px #5E7A71;
 -webkit-box-shadow:0px 0px 6px #5E7A71;
  box-shadow:0px 0px 6px #5E7A71;
  margin-top: 40rpx;
   color: #000000;
}

.youhuquan-center-item>image {
  height: 100%;
  width: 100%;
}

.youhuquan-center-item-left {
  width: 260rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.youhuquan-center-item-left>image{
  width: 180rpx;
  height: 200rpx;
  margin: 40rpx 30rpx;
}
.youhuquan-center-item-right {
  width: calc(100% - 260rpx);
  height: 100%;
  position: absolute;
  right: 0;
  top: 20rpx;
}

.youhuquan-center-item-right>p {
  font-size: 32rpx;
  line-height: 60rpx;
   color: #000000;
}

.youhuquan-center-item-right>p:nth-of-type(1) {
  margin-top: 30rpx;
  font-size: 40rpx;
}
.youhuquan-center-item-right>p:nth-of-type(3) {
  width: 200rpx;
  height: 60rpx;
 background: #796BF3;
 line-height: 60rpx;
 color: #fff;
 text-align: center;
 margin-top: 20rpx;
}

.youhuquan-center-item:nth-last-child(1) >.youhuquan-center-item-right > p:nth-last-child(1){
  display: none
}