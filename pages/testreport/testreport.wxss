.recomend-products {
  width: 60%;
  display: block;
  margin-left: 20%;
  line-height: 100rpx;
  font-size: 38rpx;
  box-sizing: border-box;
  color: #fff;
  position: relative;
  text-align: center;
}

.recomend-products::after, .recomend-products::before {
  position: absolute;
  width: 50px;
  height: 1rpx;
  background: #fff;
  content: '';
  top: 25px;
}

.recomend-products::after {
  left: 10%;
}

.recomend-products::before {
  right: 10%;
}

.recomend-products-box {
  width: 100%;
  margin-top: 0;
}

.recomend-products-box>image {
  width: 30%;
  height: 200rpx;
  padding: 10rpx;
  margin-left: 6%;
  float: left;
}

.recomend-products-box>div {
  /* float:left; */
  margin-left: 40%;
}

.recomend-products-box>div>p {
  color: #fcfcfc;
}

.recomend-products-box>div>p:nth-of-type(1) {
  font-size: 28rpx;
  line-height: 60rpx;
}

.recomend-products-box>div>p:nth-of-type(2) {
  font-size: 34rpx;
  line-height: 46rpx;
}

.recomend-products-box>div>p:nth-of-type(3) {
  font-size: 28rpx;
  line-height: 60rpx;
}

.dingyue {
  width: 80%;
  height: 140rpx;
  margin-left: 10%;
  border-radius: 60rpx;
  background: -webkit-linear-gradient(left, #f12f8c, #fea130); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #f12f8c, #fea130); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #f12f8c, #fea130); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #f12f8c, #fea130);
  margin-top: 40rpx;
}

.dingyue>div {
  height: 140rpx;
  float: left;
}

.dingyue>div:nth-of-type(1) {
  width: 90%;
  font-size: 30rpx;
}
.dingyue>div:nth-of-type(1)>p{
  line-height: 50rpx;
  text-indent: 30rpx;
}
.dingyue>div:nth-of-type(1)>p:nth-of-type(1) {
  padding-top: 20rpx;
}

.dingyue>div:nth-of-type(2) {
  width: 10%;
  color: #fff;
  font-size: 50rpx;
  line-height: 140rpx;
  text-align: left;
}
