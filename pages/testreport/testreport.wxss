/* pages/testreport/testreport.wxss */

.changeStep {
  width: 16px;
  height: 80rpx;
  position: absolute;
  top: 50%;
}

.changeStep:nth-of-type(1) {
  left: 30rpx;
}

.changeStep:nth-of-type(2) {
  right: 30rpx;
}

.step-img {
  width: 80%;
  height: 600rpx;
  margin-left: 10%;
  position: absolute;
  top: 120rpx;
  z-index: 7;
}

.real-img {
  width: 340rpx;
  height: 340rpx;
  margin-left: 14%;
  position: absolute;
  top: 158rpx;
  z-index: 1;
}

.step-desc {
  position: absolute;
  left: 57%;
  top: 80rpx;
  color: #fff;
  font-size: 34rpx;
}

.step-number {
  position: absolute;
  top: 68rpx;
  left: 6%;
  font-size: 124rpx;
  font-style: italic;
  color: #9176df;
  font-weight: bold;
}

.text-div {
  width: 70%;
  /* height: 240rpx; */
  background: #fff;
  display: block;
  margin-top: 540rpx;
  margin-left: 15%;
  position: relative;
  z-index: 10;
}

.text-div>span {
  width: 0;
  height: 0;
  border-bottom: 20px solid #fff;
  border-left: 30px solid transparent;
  position: absolute;
  top: -36rpx;
  left: 45%;
}

.text-div>p {
  display: block;
  width: 90%;
  line-height: 60rpx;
  margin: 0 16px;
  font-size: 32rpx;
  box-sizing: border-box;
  color: #797979;
}

/* .text-div>p:nth-of-type(1){
