/* for custom modal */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.8;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-content {
  position: fixed;
  top: 26%;
  left: 0;
  z-index: 9500;
  width: 500rpx;
  height: 780rpx;
  overflow: hidden;
  padding: 120rpx 50rpx 50rpx;
  margin: -180rpx 70rpx;
  /* background: #fff; */
  border-radius: 20rpx;
}

