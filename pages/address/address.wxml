      <p> {{item.region}}  </p>
      <p> {{item.address}}  </p>
      <p>  {{item.name}}   <span>    {{item.tel}} </span>  </p>
   </div>
  <div class='address-box-right'   bindtap='editAddress'> 
    <image src='../image/center/edit.png' style='width:100%;height:100%'></image>
   </div>
 </div>
    <p class='addAddress'    bindtap='addAddress'>新增地址 </p>

</view>

