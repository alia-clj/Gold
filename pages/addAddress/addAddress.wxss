/* pages/addAddress/addAddress.wxss */
.address-container{
  width: 80%;
  overflow: hidden;
  margin-left: 10%;
  margin-top:20rpx;

}
.section{
  width: 100%;
  height: 120rpx;
  border-bottom: 1px solid black;
}
.section-title{
  width: 140rpx;
  height: 120rpx;
  line-height: 120rpx;
  float: left;
font-size: 36rpx;
}
.section-form-item{
  width: calc(100% - 140rpx);
  height: 80rpx;
  margin-top: 24rpx;
  float: left;
}
.btn-area>button{
  background: #4AEC87;
  margin-top: 40rpx;
  color: #ffffff;
}
.btn-area>button:nth-child(1){
  margin-top: 80rpx;
}
.btn-area>button:nth-last-child(1){
  background: #FF8484;
}

/* for custom modal */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.8;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-content {
position:fixed;
top:40%;
left:0;
z-index:9500;
width:500rpx;
height:300rpx;
overflow:hidden;
padding:120rpx 50rpx 50rpx;
margin:-180rpx 70rpx;
background:#ffffff;
border-radius:20rpx;



}

.modal-content-box {
  position: fixed;
  top: 14%;
  left: 10%;
  z-index: 9600;
  width: 80%;
  height: 80%;
  overflow: hidden;
  background: #fff;
  border-radius: 2rpx;
}


.test-box {
  width: 60%;
  height: 120rpx;
  position: fixed;
  top:360rpx;
  left: 20%;
  z-index: 96666;
}

.test-box-p {
  width: 100%;
  height: 40rpx;
  font-size: 30rpx;
  color: #000000;
  display: block;
  line-height: 40rpx;
  text-align: center;
}

.test-box-p:nth-of-type(2) {
  font-size: 40rpx;
  margin-top: 20rpx;
}

.btn-box{
  width: 100%;
  height: 100rpx;
  margin-top:180rpx;

}

.btn-box-cancle{
  width:200rpx;
  height: 60rpx;
  float: left;
  line-height: 60rpx;
border: 1px solid black;
text-align: center;

}
.btn-box-del{
  width:200rpx;
  height: 60rpx;
  float: right;
  line-height: 60rpx;
  text-align: center;
  color: #ffffff;
  background: #796BF3;
  
}