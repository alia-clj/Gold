<!-- 底部排名  -->
    <view class='contentBottom'>
        <view class='BottomFirst'>
            <text id='0' data-id='0'>获奖名单</text>
        </view>
        <swiper class="tab-right" style='background:{{bgColor}};' vertical="true" autoplay="true" circular="true" interval="1000" display-multiple-items='1'>
            <view class="right-item">
                <block wx:for-index="idx" wx:for='{{aa}}'>
                    <swiper-item style='height:300rpx'>
                        <view class='content-item'>
                            <image src='{{item.avatarUrl}}' class='avater'></image>
                            <text class='name'>{{item.nickName}}</text>
                            <text class='wawa'>获得奖金{{item.reward}}元</text>
                        </view>
                    </swiper-item>
                </block> 
                
            </view>
        </swiper>
    </view>

