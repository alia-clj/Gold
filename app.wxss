/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #f5f5f5;
  overflow: hidden
} 

div,p{
  display: block
}

p{
  color: #ffffff;
}

.recomend-products {
width:60%;
display:block;
margin-left:20%;
line-height:100rpx;
font-size:38rpx;
box-sizing:border-box;
color:#fff;
position:relative;
text-align:center;

}


.recomend-products::after, .recomend-products::before {
  position: absolute;
  width: 50px;
  height: 1rpx;
  background: #fff;
  content: '';
  top: 25px;
}

.recomend-products::after {
  left: 10%;
}

.recomend-products::before {
  right: 10%;
}

.recomend-products-box {
  width: 100%;
  margin-top: 0;
}

.recomend-products-box>image {
  width: 30%;
  height: 200rpx;
  padding: 10rpx;
  margin-left: 6%;
  float: left;
}

.recomend-products-box>div {
  /* float:left; */
  margin-left: 40%;
}

.recomend-products-box>div>p {
  color: #fcfcfc;
}


.recomend-products-box>div>p:nth-of-type(1) {
  font-size: 28rpx;
  line-height: 60rpx;
}

.recomend-products-box>div>p:nth-of-type(2) {
  font-size: 34rpx;
  line-height: 46rpx;
}

.recomend-products-box>div>p:nth-of-type(3) {
  font-size: 28rpx;
  line-height: 60rpx;
}




.recomend-products-radar {
  width: 50%;
  display: block;
  margin-left: 25%;
  line-height: 100rpx;
  font-size: 38rpx;
  box-sizing: border-box;
  color: #fff;
  position: relative;
  text-align: center;
}

.recomend-products-box-radar {
  width: 50%;
  margin-top: 0;
  box-sizing: border-box;
  float: left;
}

.recomend-products-box-radar>image {
  width: 70%;
  height: 200rpx;
  padding: 10rpx;
  margin-left: 6%;
}

.recomend-products-box-radar>div>p {
  color: #fcfcfc;
  text-align: left;
}

.recomend-products-box-radar>div>p {
  font-size: 28rpx;
  line-height: 60rpx;
  text-indent: 40rpx;
}

.recomend-products-box-radar>div>p:nth-of-type(3) {
  font-size: 34rpx;
  line-height: 60rpx;
}


.container{
  width:100%;height:100%;background:blue;overflow:hidden
}